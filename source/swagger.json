                  "$ref": "#/components/schemas/Booking"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/booking/{id}/extend": {
      "post": {
        "summary": "Extend an existing booking",
        "tags": ["booking-controller"],
        "operationId": "extendBooking",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "Booking ID"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["extraNights"],
                "properties": {
                  "extraNights": {
                    "type": "integer",
                    "minimum": 1,
                    "example": 2
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Booking extended successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Booking"
                }
              }
            }
          },
          "400": {
            "description": "Invalid extraNights",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string",
                  "example": "extraNights must be a positive integer"
                }
              }
            }
          },
          "404": {
            "description": "Booking not found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string",
                  "example": "Booking not found"
                }
              }
            }
          },
          "409": {
            "description": "Conflict: unit is occupied in the extension window",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string",
                  "example": "Extension not possible; unit is taken"
                }
              }
            }
          }
        }
      }
    },
